<link rel="stylesheet" href="/css/get_status.css">
<a href="/doctors/home" id="home">Home</a>
<form name="form" id="form" action="/patients/getstatus" method="POST">
    <h3>Get Reports</h3>
    <label for="status">Choose a Status:</label>
    <select name="status" id="status" required>
      <option value="Positive-Admit">Positive-Admit</option>
      <option value="Symptoms-Quarantine">Symptoms-Quarantine</option>
      <option value="Travelled-Quarantine">Travelled-Quarantine</option>
      <option value="Negative">Negative</option>
    </select>
    <br><br>
    <input type="submit" class="custom-btn" value="Submit">
</form>